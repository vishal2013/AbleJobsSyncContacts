<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SyncContactsActivity">

    <Button
        android:id="@+id/sync_contacts_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync contacts"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add all new contacts"
        android:layout_marginBottom="10dp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:layout_marginBottom="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"/>

    <Button
        android:id="@+id/add_server_db_contacts_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add contacts in Server DB" />

</LinearLayout>
